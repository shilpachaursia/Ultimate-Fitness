<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ultimatefitness.bottom_menu.UtilityActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/tool">
        <ImageView
            android:id="@+id/utilityFemaleBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/back_btn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTILITY"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"/>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="284dp"
            android:layout_height="160dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cal_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/calculator" />
            <TextView
                android:id="@+id/Text_logo"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="140dp"
                android:text="CALCULATOR"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:layout_below="@+id/logo"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/cardview_color"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/bmi_cal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/bmi" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="110dp"
                        android:gravity="center"
                        android:text="BMI Calculator"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="50dp"
                    app:cardBackgroundColor="@color/cardview_color"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/protein_cal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        app:srcCompat="@drawable/proteincal" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="110dp"
                        android:gravity="center"
                        android:text="Protein Calculator"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="50dp"
                    app:cardBackgroundColor="@color/cardview_color"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/fat_cal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        app:srcCompat="@drawable/fatcal" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="110dp"
                        android:gravity="center"
                        android:text="Fat Calculator"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navigation_view"
        android:layout_centerHorizontal="true"
        app:adSize="FULL_BANNER"
        app:adUnitId="ca-app-pub-2342822035961981/5574761661">
        <!--           ca-app-pub-2342822035961981/5574761661-->
    </com.google.android.gms.ads.AdView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        app:itemIconTint="@drawable/icon_color"
        app:itemTextColor="@drawable/icon_color"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>