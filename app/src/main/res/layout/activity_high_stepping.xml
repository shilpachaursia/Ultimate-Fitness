<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".female.exerciseFemale.exerciseStartActivity.absAllExercise.HighStepping">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/exerciseName">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Abs Workout"
            android:textSize="27sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/highstepping"
        android:id="@+id/highSteppingGif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/fragmentHighStepping"
        android:text="READY TO GO -- High Stepping"
        android:textColor="@color/pink"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/readytogo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/highsteppingendpoint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Finish! Next Exercise"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:id="@+id/highsteppingback"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30sp"/>

        <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
            android:id="@+id/circular_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:m_arc_stroke_color="@android:color/white"
            app:m_cicle_stroke_width="14"
            app:m_circle_radius="35"
            app:m_circle_stroke_color="@color/pink" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/forwordarrow"
            android:id="@+id/highsteppingforword"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/resume"
            android:id="@+id/resumeBtn"
            android:onClick="resume"/>
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/start"
            android:id="@+id/startBtn"
            android:onClick="start"/>


        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pause"
            android:id="@+id/pauseBtn"
            android:onClick="pause"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="RESUME"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Start Exercise"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Pause"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>