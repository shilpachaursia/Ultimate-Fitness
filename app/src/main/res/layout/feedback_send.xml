<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailFeedback"
            android:hint="Your Email..."
            android:inputType="text"
            android:textColor="@color/setting_text"
            android:textColorHint="@color/setting_text"
            android:fontFamily="monospace"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/setting_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/setting_text"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameFeedback"
            android:hint="Your Name..."
            android:inputType="text"
            android:textColor="@color/setting_text"
            android:textColorHint="@color/setting_text"
            android:fontFamily="monospace"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/setting_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/setting_text"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback"
            android:hint="Your Feedback..."
            android:inputType="text"
            android:textColor="@color/setting_text"
            android:textColorHint="@color/setting_text"
            android:fontFamily="monospace"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/setting_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/setting_text"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>