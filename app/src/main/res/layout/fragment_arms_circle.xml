<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ultimatefitness.female.exerciseFemale.ArmsAllExercise.ArmsCircleFragment">

    <LinearLayout
        android:id="@+id/change_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ACGif"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/arm_circle" />

        <TextView
            android:id="@+id/ACStartPoint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="READY TO GO -- Arms Circle"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ACEndpoint"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Finish next exercise!"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/AcBackbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/back" />


            <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
                android:id="@+id/ACcircular_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:m_arc_stroke_color="@android:color/white"
                app:m_cicle_stroke_width="14"
                app:m_circle_radius="35"
                app:m_circle_stroke_color="@color/pink" />

            <ImageView
                android:id="@+id/ACForwordBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/forwordarrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ACresumeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/resume" />

            <ImageView
                android:id="@+id/ACstartBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/start" />


            <ImageView
                android:id="@+id/ACPause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/pause" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:text="RESUME"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Start Exercise"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Pause"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/addArea"
            android:layout_centerHorizontal="true"
            app:adSize="FULL_BANNER"
            app:adUnitId=" ca-app-pub-2342822035961981/5574761661">
            <!--           ca-app-pub-2342822035961981/5574761661-->
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</FrameLayout>