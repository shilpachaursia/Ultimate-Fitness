<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ultimatefitness.female.exerciseFemale.absFemaleAllExercise.MountainClimberAbsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/change_fragment">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/mountain_climber"
            android:id="@+id/CJJAGif"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="READY TO GO --Mountain Climber"
            android:textColor="@color/pink"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/CJJAStartPoint"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/CJJAEndpoint"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Finish next exercise!"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/CJJAback"/>


            <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
                android:id="@+id/CJJAcircular_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:m_arc_stroke_color="@android:color/white"
                app:m_cicle_stroke_width="14"
                app:m_circle_radius="35"
                app:m_circle_stroke_color="@color/pink" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/forwordarrow"
                android:id="@+id/CJJAForwordBtn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/resume"
                android:id="@+id/CJJAresumeBtn" />
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/start"
                android:id="@+id/CJJAstartBtn" />


            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pause"
                android:id="@+id/CJJApauseBtn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="90dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="RESUME"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Start Exercise"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Pause"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/addArea"
            android:layout_centerHorizontal="true"
            app:adSize="FULL_BANNER"
            app:adUnitId="ca-app-pub-2342822035961981/5574761661">
            <!--           ca-app-pub-2342822035961981/5574761661-->
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</FrameLayout>