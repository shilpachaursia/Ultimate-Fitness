<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ultimatefitness.MainActivity">

    <TextView
        android:id="@+id/gender"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CHOOSE YOUR GENDER"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:gravity="center_vertical|center_horizontal"/>

    <ImageView
        android:id="@+id/boy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/gender"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="57dp"
        app:srcCompat="@drawable/malebg" />

    <TextView
        android:id="@+id/boytext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/boy"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:text="MALE"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/girl"
        android:layout_width="201dp"
        android:layout_height="233dp"
        android:layout_below="@id/boytext"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-10dp"
        app:srcCompat="@drawable/femalebg" />

    <TextView
        android:id="@+id/girltext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/girl"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="9dp"
        android:text="FEMALE"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />



</RelativeLayout>