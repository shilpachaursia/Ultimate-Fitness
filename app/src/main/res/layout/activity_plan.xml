<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".bottom_menu.PlanActivity"
    android:background="@drawable/bg3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/female_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLANS"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:src="@drawable/search" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp">

                            <ImageView
                                android:id="@+id/fullbodylock"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/fullbadygirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp">

                            <ImageView
                                android:id="@+id/abslock1"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="20dp"

                                android:src="@drawable/absgirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp"
                            android:layout_marginRight="5dp">

                            <ImageView
                                android:id="@+id/buttlock"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/buttgirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:id="@+id/armlock"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/armgirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp"
                            android:layout_marginRight="5dp">

                            <ImageView
                                android:id="@+id/thighlock"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/thighgirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/cardview_color"
                            app:cardCornerRadius="30sp"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:id="@+id/abslock"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="20dp"

                                android:src="@drawable/absgirlbg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="150dp"
                                android:background="@color/black"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/lock" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3 Month Plan"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>




        <FrameLayout
            android:id="@+id/framecontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            app:itemIconTint="@drawable/icon_color"
            app:itemTextColor="@drawable/icon_color"
            app:menu="@menu/bottom_menu"
            app:labelVisibilityMode="labeled"
            android:theme="@style/BottomNavThem"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</RelativeLayout>